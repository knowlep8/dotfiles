base_dir=`rcd`
ve_model_dir=$base_dir/Platforms/LISA/RTSM_VE/Build_AEMv8A/Linux-Debug-GCC-4.1
tmp_dir=$(mktemp -d -t $mktemp_flags work.XXXXXX) || return 1
archive_name=RTSM_VE_AEMv8A
dest_file=/arm/scratch/paukno01/$archive_name.tgz

echo "Copying files..." >&2
mkdir $tmp_dir/$archive_name
cp $ve_model_dir/*.so* $tmp_dir/$archive_name/

echo "Compressing..." >&2
(cd $tmp_dir && tar czf $dest_file $archive_name)

echo "New VE model available in $dest_file"
