root_dir=`rcd`
if [ -z "$root_dir" ]; then
  echo "Cannot find fastsim root directory." >&2
  return 1
fi

atlas_iss_dir=/projects/pd/validation/paukno01/atlas/logical/testbench/shared/isscompare/atlas_ct/lib
model_dir=$root_dir/Platforms/LISA/Validation/Build_Atlas/Linux-Debug-GCC-4.1
ct_wrapper_dir=$root_dir/sandbox/CTWrapper/

cp $model_dir/cadi_system_Linux-Debug-GCC-4.1.so $atlas_iss_dir/cadi_system_Linux-Release-GCC-3.4.so
cp $model_dir/libarmctmodel.so $atlas_iss_dir/libarmctmodel.so
cp $model_dir/libMAXCOREInitSimulationEngine.so.2 $atlas_iss_dir/libMAXCOREInitSimulationEngine.so.2
cp $ct_wrapper_dir/libctwrapper.so $atlas_iss_dir/libctwrapper.so
cp $ct_wrapper_dir/libsimpleapi.so $atlas_iss_dir/libsimpleapi.so
