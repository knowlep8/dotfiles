# Prompt and Menu Bar


source "$HOME/.zsh/colours"

local host=${HOST%%.*}

host_colour=${fg_blue_bold}

local MONOPROMPT="%n %m%B:%b%2~ %B%?%b %(!.#.\$) "
local COLOURPROMPT="${host_colour}%m${fg_white}:${fg_green}%2~ %(???${fg_red_bold}%1v )${fg_blue_bold}%2v%(!.#.\$) $fg_default"

local PR

case $TERM in
    xterm*|rxvt)
        PR=${COLOURPROMPT}
        ;;
    *)
        PR=${MONOPROMPT}
        ;;
esac

PS1="${TITLEBAR}${PR}"

# vim: ft=zsh
